@model OnlineBankLoanPortal.Models.LoanApplication

@{
    ViewData["Title"] = "ApplyForloan";
}

<section class="h-100" style="background: linear-gradient(to left, #e3f2fd, #ffffff);">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="~/images/loanform.png"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height:83%;" />
                        </div>

                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="display-6 mb-5 text-uppercase text-center">Loan Application Form</h3>

                                <form asp-action="ApplyForLoan">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input asp-for="ApplicantName" class="form-control form-control-lg" />
                                            <label asp-for="ApplicantName" class="control-label"></label>
                                            <span asp-validation-for="ApplicantName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <input asp-for="Amount" class="form-control form-control-lg" />
                                                <label asp-for="Amount" class="control-label"></label>
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <input asp-for="TotalIncome" class="form-control form-control-lg" />
                                                <label asp-for="TotalIncome" class="control-label"></label>
                                                <span asp-validation-for="TotalIncome" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input asp-for="ApplicantEmail" class="form-control form-control-lg" />
                                            <label asp-for="ApplicantEmail" class="control-label"></label>
                                            <span asp-validation-for="ApplicantEmail" class="text-danger"></span>
                                        </div>
                                    </div>

                             

                                   

                                    <div class="mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                           
                                            <input asp-for="Date" class="form-control" type="date" />
                                            <label asp-for="Date" class="control-label"></label>
                                            <span asp-validation-for="Date" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input asp-for="Address" class="form-control form-control-lg" />
                                            <label asp-for="Address" class="control-label"></label>
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group d-flex justify-content-center">
                                        <input type="submit" value="Submit" class="btn btn-primary" />
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
