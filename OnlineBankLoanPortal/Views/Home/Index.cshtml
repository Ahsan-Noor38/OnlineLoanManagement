@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<section class="hero">
    <div class="hero-text">
        <h1>Online Loan to Achieve Your Goals and Future for Change.</h1>
        <p>Making financial goals a priority is very important. By ensuring a user-friendly experience, individuals can comfortably work towards their dreams and achieve set goals.</p>
        <a asp-area="" asp-controller="Home" asp-action="ApplyForLoan" class="btn">Apply For Loan</a>
    </div>
    <div class="hero-image">
        <img src="~/images/hero image1.png" alt="Person holding a tablet">
    </div>
</section>
<div class="sec-section">
  
    <div class="features">
        <div class="feature-item">
            <i class="fas fa-bolt"></i> Fast Approvals
        </div>
        <div class="feature-item">
            <i class="fas fa-users"></i> 400000 Customers
        </div>
        <div class="feature-item">
            <i class="fas fa-credit-card"></i> Flexible Payments
        </div>
        <div class="feature-item">
            <i class="fas fa-file-invoice-dollar"></i> No Prepayment Fees
        </div>
    </div>
</div>
<section class="container py-5 about-us">
    <div class="row align-items-center">
       
        <div class="col-lg-6">
            <h4 class=" fw-bold "style="color:#002b45">About Our Loan Portal</h4>
            <h1 class="fw-bold mb-4 about-text" style="font-size: 2.5rem;">
                Building a Brighter Financial Future & Good Support.
            </h1>
            <p class="text-muted">
                Our Online Bank Loan Portal provides a seamless and secure way to apply for loans from the comfort of your home. We aim to simplify the loan application process by offering quick approvals, flexible repayment options, and competitive interest rates.
            </p>
            <p class="text-muted">
                Whether you need a personal loan, business loan, or home loan, our platform ensures transparency and efficiency. With our advanced digital infrastructure, you can track your loan status, manage repayments, and access financial insights—all in one place.
            </p>
            <a href="#" class="btn btn-dark px-4 py-2">APPLY FOR LOAN</a>
        </div>

        
        <div class="col-lg-6 position-relative">
            <div class="position-relative">
                <img src="~/Images/about1.png"
                     class="img-fluid rounded shadow-lg"
                     alt="Business team"
                     style="position: absolute; top: -80px; right: 30px; z-index: 1; width: 70%;">
                <img src="~/Images/about2.png"
                     class="img-fluid rounded shadow-lg"
                     alt="Working person"
                     style="position: relative;top: 100px; z-index:2; width: 50%; ">
            </div>
        </div>
    </div>
</section>
<section>
<div class="services-section">
    <h1>Our Loan Services</h1>
    <p>Choose the best loan option that suits your needs</p>
    </div>

    <!-- Services Section -->
    <div class="container my-5">
        <div class="row">
            <!-- Home Loan -->
            <div class="col-md-4">
                <div class="card text-center shadow service-card">
                    <div class="card-body">
                        <i class="fas fa-home service-icon"></i>
                        <h4 class="card-title mt-3">Home Loan</h4>
                        <p class="card-text">Get affordable home loans with low interest rates and easy repayment options.</p>
                        <a asp-area="" asp-controller="Home" asp-action="ApplyForLoan" class="btn" style="background-color:#002b45; color: white;">Apply Now</a>
                    </div>
                </div>
            </div>

            <!-- Personal Loan -->
            <div class="col-md-4">
                <div class="card text-center shadow service-card">
                    <div class="card-body">
                        <i class="fas fa-user service-icon"></i>
                        <h4 class="card-title mt-3">Personal Loan</h4>
                        <p class="card-text">Flexible personal loans to meet your financial needs, no collateral required.</p>
                        <a asp-area="" asp-controller="Home" asp-action="ApplyForLoan" class="btn" style="background-color:#002b45; color: white;">Apply Now</a>

                    </div>
                </div>
            </div>

            <!-- Business Loan -->
            <div class="col-md-4">
                <div class="card text-center shadow service-card">
                    <div class="card-body">
                        <i class="fas fa-briefcase service-icon"></i>
                        <h4 class="card-title mt-3">Business Loan</h4>
                        <p class="card-text">Boost your business with customized loan solutions at competitive rates.</p>
                        <a asp-area="" asp-controller="Home" asp-action="ApplyForLoan" class="btn" style="background-color:#002b45; color: white;">Apply Now</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
<section class="why-choose-us py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Section: Image -->
            <div class="col-lg-6 why-choose-us-img">
                <img src="~/images/whyChooseUs.jpg" alt="Professional" class="img-fluid rounded shadow-lg">
            </div>

            <!-- Right Section: Text Content -->
            <div class="col-lg-6">
                <h6 class="section-subtitle">Why Choose Our Portal</h6>
                <h2 class="section-title">
                    Empowering Your Financial Goals with Trusted Loans.
                </h2>
                <p class="section-description">
                    Our Online Bank Loan Portal simplifies the loan process, providing quick approvals, competitive rates, and flexible terms. Trust us to help you achieve your financial goals with ease and security.
                </p>
                <ul class="list-unstyled">
                    <li class="d-flex align-items-start mb-3">
                        <i class="bi bi-check-circle-fill text-primary me-2"></i>
                        Easy and quick loan approvals with minimal paperwork.
                    </li>
                    <li class="d-flex align-items-start mb-3">
                        <i class="bi bi-check-circle-fill text-primary me-2"></i>
                        Competitive interest rates and flexible repayment terms.
                    </li>
                    <li class="d-flex align-items-start mb-3">
                        <i class="bi bi-check-circle-fill text-primary me-2"></i>
                        Secure platform with real-time loan tracking.
                    </li>
                    <li class="d-flex align-items-start mb-3">
                        <i class="bi bi-check-circle-fill text-primary me-2"></i>
                        Personalized financial support from our expert team.
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
